{
  "name": "BaseUser",
  "base": "User",
  "idInjection": true,
  "properties": {
    "username": {
      "type": "string"
    },
    "fullname": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "projects": {
      "type": "hasMany",
      "model": "Project",
      "foreignKey": "ownerId"
    },
    "teams": {
      "type": "hasMany",
      "model": "Team",
      "foreignKey": "ownerId"
    },
    "followers": {
      "type": "hasMany",
      "model": "BaseUser",
      "foreignKey": "followingId",
      "through": "Follower"
    },
    "following": {
      "type": "hasMany",
      "model": "BaseUser",
      "foreignKey": "followerId",
      "through": "Follower"
    },
    "watched": {
      "type": "hasMany",
      "model": "Project",
      "foreignKey": "watcherId",
      "through": "Watch"
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "unlink"
    },
    { 
      "principalType": "ROLE", 
      "principalId": "$owner", 
      "permission": "ALLOW", 
      "property": "upsert" 
    }
  ],
  "methods": []
}
